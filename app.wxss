/**
 * app.wxss - 全局样式
 * CleanUpLife 小程序
 */

/* ==================== 变量定义 ==================== */
page {
  --primary-color: #1890ff;
  --primary-light: #40a9ff;
  --primary-gradient: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  --success-color: #52c41a;
  --success-light: #6adda9;
  --warning-color: #faad14;
  --danger-color: #ff4d4f;
  --danger-light: #ff7875;
  --text-primary: #222;
  --text-secondary: #444;
  --text-hint: #666;
  --text-disabled: #999;
  --bg-page: #f5f7fa;
  --bg-card: #fff;
  --bg-hover: #f9fafb;
  --border-color: #e8e8e8;
  --border-light: #f0f0f0;
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 20rpx;
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  font-size: 28rpx;
  background-color: var(--bg-page);
}

/* ==================== 容器布局 ==================== */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-lg) var(--spacing-md);
  padding-bottom: calc(var(--spacing-xl) + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* ==================== 表格组件 ==================== */
.product-table {
  width: 100%;
  max-width: 700rpx;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.table-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid var(--border-light);
  min-height: 80rpx;
  transition: background-color 0.2s;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row:active {
  background-color: var(--bg-hover);
}

.table-header {
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  font-weight: 600;
  color: var(--text-primary);
  min-height: 72rpx;
}

.table-header .table-cell {
  color: var(--text-secondary);
  font-weight: 600;
}

.table-cell {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm) var(--spacing-xs);
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
}

/* ==================== 卡片样式 ==================== */
.product-card {
  background: var(--bg-card);
  margin: 0;
  transition: all 0.2s ease;
}

.product-card:active {
  background-color: var(--bg-hover);
}

.product-name {
  font-weight: 600;
  font-size: 28rpx;
  color: var(--text-primary);
}

.name-cell {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  justify-content: center;
}

/* ==================== 日期标签 ==================== */
.product-date {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: var(--radius-md);
  font-weight: 500;
}

.date-normal {
  background: linear-gradient(135deg, #52c41a 0%, #6adda9 100%);
  color: #fff;
}

.date-expired {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #fff;
}

.date-soon {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  color: #fff;
}

/* ==================== 位置标签 ==================== */
.location-tag {
  display: inline-block;
  background: linear-gradient(135deg, #f0f5ff 0%, #e6f7ff 100%);
  border-radius: var(--radius-sm);
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* ==================== 添加按钮 ==================== */
.add-btn-row {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md) 0;
  width: 100%;
}

/* ==================== 添加按钮 FAB ==================== */
.fab-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--primary-gradient);
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.fab-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

.fab-btn-icon {
  font-size: 48rpx;
  color: #fff;
  line-height: 1;
}

/* ==================== 表单卡片样式 ==================== */
.form-card {
  width: 92%;
  max-width: 700rpx;
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  padding: var(--spacing-xl) var(--spacing-lg);
  margin: var(--spacing-xl) 0 var(--spacing-lg);
}

.form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xl);
}

.form-item {
  margin-bottom: var(--spacing-lg);
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
  display: block;
  font-weight: 500;
}

.form-input {
  width: 100%;
  min-height: 80rpx;
  line-height: 40rpx;
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 20rpx;
  font-size: 28rpx;
  background: var(--bg-hover);
  box-sizing: border-box;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.form-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3rpx rgba(24, 144, 255, 0.1);
}

.picker-view {
  width: 100%;
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 20rpx;
  font-size: 28rpx;
  background: var(--bg-hover);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  box-sizing: border-box;
}

.location-selector {
  display: flex;
  gap: var(--spacing-md);
}

.location-selector .picker-view {
  flex: 1;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 20rpx;
  font-size: 28rpx;
  background: var(--bg-hover);
  box-sizing: border-box;
}

/* ==================== 提交按钮 ==================== */
.submit-button {
  width: 100%;
  background: var(--primary-gradient);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: var(--radius-md);
  padding: 24rpx 0;
  margin-top: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.submit-button:active {
  opacity: 0.9;
  transform: scale(0.99);
}

/* ==================== 左滑操作 ==================== */
.swipe-row {
  position: relative;
  overflow: visible;
  width: 100%;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.25s ease;
  z-index: 10;
  padding-right: var(--spacing-xs);
}

.swipe-row[data-show="true"] .swipe-actions {
  opacity: 1;
  pointer-events: auto;
}

.swipe-content {
  background: var(--bg-card);
  z-index: 1;
  overflow: hidden;
  transition: transform 0.25s ease;
}

.swipe-btn {
  border: none;
  outline: none;
  width: 88rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: var(--radius-sm);
  margin-left: var(--spacing-xs);
  color: #fff;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s;
  padding: 0;
}

.delete-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.delete-btn:active {
  background: #d9363e;
}

.update-btn {
  background: var(--primary-gradient);
}

.update-btn:active {
  background: #1765ad;
}

/* ==================== 滚动视图 ==================== */
.table-scroll-view {
  max-height: 420rpx;
  min-height: 100rpx;
  overflow-y: auto;
}

.table-scroll-view::-webkit-scrollbar {
  width: 6rpx;
  background: transparent;
}

.table-scroll-view::-webkit-scrollbar-thumb {
  background: #d9d9d9;
  border-radius: 3rpx;
}

/* ==================== Slider 样式 ==================== */
.form-item-slider {
  padding-bottom: var(--spacing-md);
}

.slider-wrap,
.travel-slider-wrap {
  width: 100%;
  padding: var(--spacing-md) 0;
}

/* ==================== 空状态 ==================== */
.empty-state {
  padding: var(--spacing-xl);
  text-align: center;
  color: var(--text-hint);
  font-size: 26rpx;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: var(--spacing-sm);
  opacity: 0.6;
}
