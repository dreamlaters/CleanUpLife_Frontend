/**
 * 待购物品页面样式 - 统一设计语言 v2.0
 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #e8ecf5 100%);
  padding: 24rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* ==================== 表单卡片 ==================== */
.form-card {
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  padding: 32rpx;
}

/* ==================== 表单头部 ==================== */
.form-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #10b981;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.title-icon {
  font-size: 36rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
  display: block;
}

/* ==================== 表单组 ==================== */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 12rpx;
  display: block;
}

.label-required {
  color: #ef4444;
  margin-right: 4rpx;
}

.label-optional {
  font-size: 20rpx;
  color: #9ca3af;
  font-weight: 400;
  margin-left: 8rpx;
}

/* ==================== 输入框 ==================== */
.form-input {
  width: 100%;
  padding: 22rpx 24rpx;
  background: #fafafa;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a2e;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-input:focus {
  background: #fff;
  border-color: #10b981;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input-placeholder,
.form-input-placeholder {
  color: #9ca3af;
}

/* ==================== 优先级样式 ==================== */
.priority-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.priority-value-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.priority-high {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.12) 0%, rgba(248, 113, 113, 0.12) 100%);
  color: #ef4444;
}

.priority-medium {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.12) 0%, rgba(251, 191, 36, 0.12) 100%);
  color: #f59e0b;
}

.priority-low {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.12) 0%, rgba(52, 211, 153, 0.12) 100%);
  color: #10b981;
}

.priority-desc {
  font-size: 20rpx;
  opacity: 0.8;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 4rpx;
  margin-bottom: 8rpx;
}

.slider-labels text {
  font-size: 20rpx;
  color: #9ca3af;
}

/* ==================== 提交按钮 ==================== */
.submit-button {
  width: 100%;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 20rpx;
  padding: 26rpx 0;
  margin-top: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(16, 185, 129, 0.35);
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.submit-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-icon {
  font-size: 32rpx;
}
