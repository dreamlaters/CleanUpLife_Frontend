.table-cell {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #444;
  border-right: 1px solid #e0e0e0;
}
/* 保质期列宽度设置为28% */
.table-cell:nth-child(2) {
  flex: none;
  width: 28%;
  min-width: 120rpx;
  max-width: 220rpx;
}
.table-cell:nth-child(3) {
  flex: none;
  width: 35%;
  min-width: 150rpx;
  max-width: 260rpx;
}
.table-cell:last-child {
  border-right: none;
}

.table-scroll-view {
  max-height: 410rpx; /* 9行，每行约78rpx，可根据实际行高调整 */
  min-height: 100rpx;
  overflow-y: auto;
}

/* 可选：美化滚动条（部分平台支持） */
.table-scroll-view::-webkit-scrollbar {
  width: 8px;
  background: #f0f0f0;
}
.table-scroll-view::-webkit-scrollbar-thumb {
  background: #bdbdbd;
  border-radius: 4px;
}

.swipe-row {
  position: relative;
  width: 100%;
}
.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.8s;
  z-index: 2;
}
.swipe-row[data-show="true"] .swipe-actions {
  opacity: 1;
  pointer-events: auto;
}
.swipe-content {
  background: #fff;
  z-index: 1;
  overflow: hidden;
}

.product-date {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #fff;
}

/* 过期：红色 */
.date-expired {
  background: #ff4d4f;
}
/* 快过期：黄色 */
.date-soon {
  background: #faad14;
  color: #000;
}
/* 正常：绿色 */
.date-normal {
  background: #6adda9;
  color: #000;
}

.swipe-btn {
  border: none;
  top: 5rpx;
  outline: none;
  width: 85rpx;
  right: 38rpx;
  padding: 0 1rpx;
  min-width: 32rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  margin-left: 4rpx;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  transition: background 0.8s;
}
.delete-btn {
  background: linear-gradient(90deg, #ff4d4f 50%, #ff7875 100%);
}
.delete-btn:active {
  background: #d9363e;
}
.update-btn {
  background: linear-gradient(90deg, #1890ff 50%, #40a9ff 100%);
}
.update-btn:active {
  background: #1765ad;
}

/* 出行模块样式 */
.travel-section {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  padding: 20rpx;
}

.travel-tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #e0e0e0;
}

.travel-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.travel-tab-active {
  color: #1890ff;
  font-weight: bold;
}

.travel-tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

/* 新增表单样式 */
.travel-add-form {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.travel-form-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
}

.travel-form-row:last-child {
  border-bottom: none;
}

.travel-form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.travel-form-picker {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.travel-form-input {
  flex: 1;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.travel-form-btns {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  gap: 20rpx;
}

.travel-form-btn {
  padding: 12rpx 40rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.travel-form-cancel {
  background: #f0f0f0;
  color: #666;
}

.travel-form-submit {
  background: linear-gradient(90deg, #1890ff 50%, #40a9ff 100%);
  color: #fff;
}

/* slider 优先级样式 */
.travel-form-row-slider {
  flex-direction: column;
  align-items: flex-start;
}

.travel-slider-wrap {
  width: 100%;
  padding: 16rpx 0;
}

