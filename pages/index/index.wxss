/**
 * 首页样式
 */

/* ==================== 区块卡片 ==================== */
.section-card {
  width: 100%;
  max-width: 700rpx;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-lg);
  overflow: hidden;
}

.section-header {
  padding: var(--spacing-md) var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-light);
  background: linear-gradient(180deg, #fafbfc 0%, #f5f7fa 100%);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* ==================== 表格列宽 ==================== */
.col-date {
  flex: none !important;
  width: 28%;
  min-width: 140rpx;
}

.col-location {
  flex: none !important;
  width: 35%;
  min-width: 160rpx;
}

/* ==================== 排序图标 ==================== */
.sort-icon {
  font-size: 20rpx;
  color: var(--text-hint);
  margin-left: 4rpx;
}

/* ==================== 优先级徽章 ==================== */
.priority-badge {
  display: inline-block;
  min-width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: linear-gradient(135deg, #f0f5ff 0%, #e6f7ff 100%);
  color: var(--primary-color);
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
}

/* ==================== 类型标签 ==================== */
.type-cell {
  line-height: 1;
}

.type-tag {
  font-size: 36rpx;
  line-height: 1;
  display: block;
}

.type-domestic {
  color: #ff4d4f;
}

.type-international {
  color: #1890ff;
}

/* ==================== 出行模块 ==================== */
.travel-tabs {
  display: flex;
  justify-content: center;
  padding: 0 var(--spacing-md);
  border-bottom: 1rpx solid var(--border-light);
  background: var(--bg-card);
}

.travel-tab {
  flex: 1;
  text-align: center;
  padding: var(--spacing-md) 0;
  font-size: 28rpx;
  color: var(--text-hint);
  position: relative;
  transition: all 0.2s;
}

.travel-tab-active {
  color: var(--primary-color);
  font-weight: 600;
}

.travel-tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: var(--primary-gradient);
  border-radius: 2rpx;
}

/* ==================== 出行表单 ==================== */
.travel-add-form {
  background: var(--bg-hover);
  padding: var(--spacing-lg);
  margin: var(--spacing-md);
  border-radius: var(--radius-md);
  border: 1rpx solid var(--border-light);
}

.travel-form-row {
  display: flex;
  align-items: center;
  padding: var(--spacing-sm) 0;
  border-bottom: 1rpx solid var(--border-light);
}

.travel-form-row:last-of-type {
  border-bottom: none;
}

.travel-form-label {
  width: 160rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  flex-shrink: 0;
}

.travel-form-picker {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-secondary);
  padding: 12rpx 16rpx;
  background: var(--bg-card);
  border-radius: var(--radius-sm);
  border: 1rpx solid var(--border-color);
}

.travel-form-input {
  flex: 1;
  font-size: 26rpx;
  padding: 12rpx 16rpx;
  background: var(--bg-card);
  border-radius: var(--radius-sm);
  border: 1rpx solid var(--border-color);
}

.travel-form-row-slider {
  flex-direction: column;
  align-items: flex-start;
}

.travel-form-btns {
  display: flex;
  justify-content: flex-end;
  margin-top: var(--spacing-md);
  gap: var(--spacing-md);
}

.travel-form-btn {
  min-width: 140rpx;
  padding: 14rpx 32rpx;
  font-size: 26rpx;
  border-radius: var(--radius-sm);
  border: none;
  line-height: 1.5;
}

.travel-form-cancel {
  background: var(--border-light);
  color: var(--text-hint);
}

.travel-form-submit {
  background: var(--primary-gradient);
  color: #fff;
}

/* ==================== 推送链接 ==================== */
.push-link {
  margin-top: var(--spacing-md);
  padding: var(--spacing-md);
}

.push-navigator {
  display: block;
  text-align: center;
}

.push-text {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* ==================== 滚动条优化 ==================== */
.table-scroll-view {
  max-height: 400rpx;
}
