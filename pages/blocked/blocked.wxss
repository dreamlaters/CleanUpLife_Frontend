/**
 * 访问受限页面样式
 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #e8ecf5 100%);
  padding: 32rpx;
  box-sizing: border-box;
  padding-top: 350rpx;
}

.blocked-card {
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  padding: 48rpx 32rpx;
  width: 100%;
  text-align: center;
}

.blocked-icon-wrap {
  margin-bottom: 24rpx;
}

.blocked-icon {
  font-size: 80rpx;
}

.blocked-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.blocked-subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 40rpx;
  line-height: 1.6;
  padding: 0 16rpx;
}

/* ==================== 提示区域 ==================== */
.hint-section {
  background: #fef3c7;
  border: 1rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  text-align: left;
}

.hint-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.6;
}
