/**
 * 添加物品页面样式
 */

/* 标题图标 */
.title-icon {
  font-size: 40rpx;
  margin-right: var(--spacing-xs);
}

/* 必填标识 */
.label-required {
  color: var(--danger-color);
  margin-right: 4rpx;
}

/* Picker 选中状态 */
.picker-selected {
  color: var(--text-primary) !important;
}

.picker-icon {
  margin-right: var(--spacing-xs);
}

/* 特有字段区域 */
.category-fields {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx dashed var(--border-light);
}

/* 重量行 */
.weight-row {
  display: flex;
  gap: var(--spacing-md);
}

.weight-input {
  flex: 2;
}

.weight-unit-picker {
  flex: 1;
}

.unit-picker {
  min-width: 120rpx;
}
