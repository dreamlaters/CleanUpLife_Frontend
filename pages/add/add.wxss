/**
 * 添加物品页面样式 - 统一设计语言 v3.0
 * CleanUpLife - 清新简约风格
 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
  padding: 20rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* ==================== 表单卡片 ==================== */
.form-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  padding: 28rpx 24rpx;
}

/* ==================== 表单头部 ==================== */
.form-header {
  text-align: center;
  margin-bottom: 28rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.title-icon {
  font-size: 32rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 6rpx;
  display: block;
}

/* ==================== 表单项 ==================== */
.form-item {
  margin-bottom: 22rpx;
}

.form-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #4b5563;
  margin-bottom: 10rpx;
  display: block;
}

.label-required {
  color: #ef4444;
  margin-right: 4rpx;
}

.label-optional {
  font-size: 20rpx;
  color: #9ca3af;
  font-weight: 400;
  margin-left: 6rpx;
}

/* ==================== 输入框 ==================== */
.form-input {
  width: 100%;
  padding: 18rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid transparent;
  border-radius: 14rpx;
  font-size: 28rpx;
  color: #111827;
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
}

.form-input:focus {
  background: #ffffff;
  border-color: #6366f1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input-suffix {
  position: absolute;
  right: 20rpx;
  color: #9ca3af;
  font-size: 24rpx;
}

.input-placeholder,
.form-input-placeholder {
  color: #9ca3af;
}

/* ==================== Picker样式 ==================== */
.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 18rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid transparent;
  border-radius: 14rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  color: #9ca3af;
}

.picker-view:active {
  background: #ffffff;
  border-color: #6366f1;
}

.picker-selected {
  color: #111827 !important;
  background: #ffffff;
  border-color: #6366f1;
}

.picker-icon {
  margin-right: 8rpx;
  font-size: 22rpx;
}

.picker-text {
  flex: 1;
}

.picker-arrow {
  font-size: 16rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

/* ==================== 位置选择器 ==================== */
.location-selector {
  display: flex;
  gap: 10rpx;
}

.location-selector picker {
  flex: 1;
}

.location-picker {
  min-width: 0;
}

.location-picker .picker-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ==================== 特有字段区域 ==================== */
.category-fields {
  margin-top: 20rpx;
  padding-top: 20rpx;
  animation: fadeIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.category-divider {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-divider::before,
.category-divider::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e5e7eb, transparent);
}

.divider-text {
  padding: 0 14rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #6b7280;
}

/* ==================== 重量行 ==================== */
.weight-row {
  display: flex;
  gap: 10rpx;
}

.weight-input {
  flex: 2;
}

.weight-unit-picker {
  flex: 1;
}

.unit-picker {
  min-width: 120rpx;
  justify-content: center;
}

/* ==================== 文本域 ==================== */
.form-textarea {
  width: 100%;
  min-height: 140rpx;
  padding: 18rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid transparent;
  border-radius: 14rpx;
  font-size: 28rpx;
  color: #111827;
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  line-height: 1.6;
}

.form-textarea:focus {
  background: #ffffff;
  border-color: #6366f1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

/* ==================== 提交按钮 ==================== */
.submit-button {
  width: 100%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 18rpx;
  padding: 22rpx 0;
  margin-top: 28rpx;
  box-shadow: 0 6rpx 20rpx rgba(99, 102, 241, 0.35);
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.submit-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-icon {
  font-size: 28rpx;
}
