}

/* ==================== 操作菜单 ==================== */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.action-sheet-mask.show {
  opacity: 1;
  visibility: visible;
}

.action-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: env(safe-area-inset-bottom);
}

.action-sheet.show {
  transform: translateY(0);
}

.action-sheet-header {
  padding: 24rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.action-sheet-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.action-sheet-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.action-sheet-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
  font-size: 30rpx;
  color: #1a1a2e;
  transition: background 0.2s ease;
}

.action-sheet-item:active {
  background: #fafafa;
}

.action-sheet-item-danger {
  color: #ef4444;
}

.action-sheet-cancel {
