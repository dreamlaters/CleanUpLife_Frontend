/**
 * 计划页面样式 - 统一设计语言 v3.0
 * CleanUpLife - 清新简约风格
 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
  padding-bottom: calc(180rpx + env(safe-area-inset-bottom));
  display: block !important;
  align-items: stretch !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  width: 100% !important;
  max-width: none !important;
}

/* ==================== 导航栏 ==================== */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  box-shadow: 0 4rpx 20rpx rgba(99, 102, 241, 0.25);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 92rpx;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 0.5rpx;
}

.navbar-placeholder {
  width: 100%;
  flex-shrink: 0;
}

/* ==================== 顶部Tab ==================== */
.top-tabs {
  display: flex;
  background: #ffffff;
  margin: 20rpx 24rpx;
  border-radius: 20rpx;
  padding: 6rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.top-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 18rpx 14rpx;
  border-radius: 16rpx;
  transition: all 0.25s cubic-bezier(0.16, 1, 0.3, 1);
}

.top-tab-active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.35);
}

.top-tab-icon {
  font-size: 24rpx;
}

.top-tab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #6b7280;
  transition: color 0.15s;
}

.top-tab-active .top-tab-text {
  color: #fff;
}

/* ==================== 子Tab ==================== */
.sub-tabs {
  display: flex;
  gap: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}

.sub-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 16rpx 14rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  position: relative;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  border: 1rpx solid #f3f4f6;
}

.sub-tab-active {
  background: rgba(99, 102, 241, 0.08);
  color: #6366f1;
  border-color: #6366f1;
}

.sub-tab-badge {
  position: absolute;
  top: -6rpx;
  right: 18rpx;
  min-width: 28rpx;
  height: 28rpx;
  padding: 0 8rpx;
  background: #ef4444;
  color: #fff;
  font-size: 16rpx;
  font-weight: 600;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ==================== 区块卡片 ==================== */
.section-card {
  margin: 0 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

/* ==================== 物品列表 ==================== */
.item-list {
  padding: 12rpx 16rpx;
}

.item-card {
  display: flex;
  align-items: center;
  padding: 18rpx 16rpx;
  background: #f9fafb;
  border-radius: 18rpx;
  margin-bottom: 10rpx;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  border: 1rpx solid transparent;
}

.item-card:last-child {
  margin-bottom: 0;
}

.item-card:active {
  transform: scale(0.98);
  background: #f3f4f6;
  border-color: #e5e7eb;
}

.item-emoji {
  font-size: 28rpx;
  width: 56rpx;
  height: 56rpx;
  background: #ffffff;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.item-content {
  flex: 1;
  margin-left: 14rpx;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #111827;
  display: block;
}

.item-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 6rpx;
  flex-wrap: wrap;
}

.type-badge {
  font-size: 20rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
}

.type-domestic {
  background: rgba(20, 184, 166, 0.1);
  color: #14b8a6;
}

.type-international {
  background: rgba(99, 102, 241, 0.1);
  color: #6366f1;
}

.priority-text {
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
}

.date-text {
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
}

.date-badge {
  font-size: 20rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
  background: rgba(99, 102, 241, 0.1);
  color: #6366f1;
}

.mark-btn {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #22c55e 0%, #4ade80 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(34, 197, 94, 0.3);
  transition: transform 0.15s ease;
}

.mark-btn:active {
  transform: scale(0.9);
}

.mark-btn text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 600;
}

/* ==================== 年度目标 ==================== */
.year-selector {
  display: flex;
  justify-content: center;
  margin-bottom: 16rpx;
}

.year-picker {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
}

.year-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.year-arrow {
  font-size: 16rpx;
  color: #9ca3af;
}

/* ==================== 双栏布局 ==================== */
.goal-columns {
  display: flex;
  gap: 12rpx;
  padding: 0 24rpx;
}

.goal-column {
  flex: 1;
  background: #ffffff;
  border-radius: 22rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.goal-column-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 14rpx;
  position: relative;
}

.goal-column-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
}

.goal-header-pig::before {
  background: linear-gradient(90deg, #ec4899 0%, #f472b6 100%);
}

.goal-header-donkey::before {
  background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
}

.goal-owner-emoji {
  font-size: 36rpx;
  margin-bottom: 6rpx;
}

.goal-owner-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #111827;
}

/* ==================== 目标列表 ==================== */
.goal-list {
  padding: 10rpx 14rpx 18rpx;
}

.goal-item-wrap {
  margin-bottom: 8rpx;
}

.goal-item-wrap:last-child {
  margin-bottom: 0;
}

.goal-item-wrap.goal-item-completed {
  opacity: 0.7;
}

.goal-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 10rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  border: 1rpx solid transparent;
}

.goal-item:active {
  background: #f3f4f6;
  border-color: #e5e7eb;
}

.goal-item-completed {
  opacity: 0.7;
}

.goal-checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.goal-checkbox-checked {
  background: linear-gradient(135deg, #22c55e 0%, #4ade80 100%);
  border-color: transparent;
  box-shadow: 0 2rpx 6rpx rgba(34, 197, 94, 0.3);
}

.goal-checkbox-checked text {
  font-size: 16rpx;
  color: #fff;
  font-weight: 600;
}

.goal-content {
  flex: 1;
  min-width: 0;
}

.goal-title {
  font-size: 23rpx;
  color: #111827;
  line-height: 1.5;
  word-break: break-all;
  display: block;
}

.goal-title-completed {
  color: #9ca3af;
  text-decoration: line-through;
}

.goal-expand-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

/* ==================== 进度条 ==================== */
.goal-progress {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 6rpx;
}

.progress-bar {
  flex: 1;
  height: 6rpx;
  background: #e5e7eb;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #60a5fa, #22c55e);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 18rpx;
  color: #9ca3af;
  min-width: 40rpx;
  text-align: right;
}

/* ==================== 子目标样式 ==================== */
.sub-goals {
  padding: 8rpx 10rpx 0 42rpx;
  animation: slideDown 0.2s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.sub-goal-item {
  display: flex;
  align-items: center;
  padding: 10rpx 12rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 6rpx;
  border-left: 4rpx solid #e5e7eb;
  transition: all 0.2s ease;
}

.sub-goal-item:active {
  background: #f9fafb;
}

.sub-goal-completed {
  border-left-color: #22c55e;
  opacity: 0.6;
}

.sub-goal-checkbox {
  width: 26rpx;
  height: 26rpx;
  border-radius: 6rpx;
  border: 2rpx solid #d1d5db;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.sub-goal-checkbox-checked {
  background: #22c55e;
  border-color: #22c55e;
}

.sub-goal-checkbox-checked text {
  font-size: 12rpx;
  color: #fff;
}

.sub-goal-title {
  flex: 1;
  font-size: 21rpx;
  color: #374151;
  line-height: 1.4;
  word-break: break-all;
}

.sub-goal-title-completed {
  color: #9ca3af;
  text-decoration: line-through;
}

/* 添加子目标按钮 */
.add-sub-goal-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 12rpx;
  border: 2rpx dashed #e5e7eb;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 4rpx;
  transition: all 0.2s ease;
}

.add-sub-goal-btn:active {
  background: #f3f4f6;
  border-color: #d1d5db;
}

/* ==================== 添加目标按钮 ==================== */
.goal-add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  padding: 14rpx;
  margin: 0 14rpx 18rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #9ca3af;
  border: 2rpx dashed #e5e7eb;
  transition: all 0.2s ease;
}

.goal-add-btn:active {
  background: #f3f4f6;
  border-color: #d1d5db;
  color: #6b7280;
}

.goal-add-icon {
  font-size: 24rpx;
}

.goal-empty {
  padding: 24rpx 14rpx;
  text-align: center;
  font-size: 22rpx;
  color: #9ca3af;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 56rpx 28rpx;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 28rpx;
}

.empty-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.35);
  transition: transform 0.15s ease;
}

.empty-btn:active {
  transform: scale(0.96);
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 56rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f4f6;
  border-top-color: #6366f1;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 悬浮按钮 ==================== */
.fab-btn {
  position: fixed;
  right: 28rpx;
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.4);
  transition: all 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  z-index: 50;
}

.fab-btn:active {
  transform: scale(0.88);
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: 300;
}

/* ==================== 底部链接 ==================== */
.footer-link-wrap {
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.footer-link {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.footer-link:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.footer-link-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.footer-link-text {
  flex: 1;
  font-size: 28rpx;
  color: #4b5563;
  font-weight: 500;
}

.footer-link-arrow {
  font-size: 28rpx;
  color: #d1d5db;
}

/* ==================== 安全区域 ==================== */
.safe-bottom {
  height: calc(env(safe-area-inset-bottom) + 16rpx);
}

/* ==================== 弹窗样式 ==================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 200;
  display: flex;
  align-items: flex-end;
  opacity: 1;
  visibility: visible;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 28rpx 28rpx 0 0;
  transform: translateY(0);
  overflow: hidden;
  animation: slideUp 0.35s cubic-bezier(0.16, 1, 0.3, 1);
}

.modal-content-small {
  max-height: 50vh;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #9ca3af;
  border-radius: 50%;
  background: #f9fafb;
}

.modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 16rpx 24rpx 24rpx;
  display: flex;
  gap: 12rpx;
}

/* ==================== 表单元素 ==================== */
.form-group {
  margin-bottom: 20rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 10rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 18rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid transparent;
  border-radius: 14rpx;
  font-size: 28rpx;
  color: #111827;
  box-sizing: border-box;
  transition: all 0.15s;
}

.form-input:focus {
  background: #ffffff;
  border-color: #6366f1;
}

.form-input-placeholder {
  color: #9ca3af;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 18rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid transparent;
  border-radius: 14rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.15s;
  color: #9ca3af;
}

.form-picker-selected {
  color: #111827;
  background: #ffffff;
  border-color: #6366f1;
}

/* ==================== 按钮 ==================== */
.btn {
  flex: 1;
  padding: 18rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.15s;
}

.btn:active {
  transform: scale(0.98);
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.35);
}

.goal-owner-emoji {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.goal-owner-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.goal-progress-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.goal-progress-bar {
  width: 80rpx;
  height: 6rpx;
  background: #f3f4f6;
  border-radius: 3rpx;
  overflow: hidden;
}

.goal-progress-fill {
  height: 100%;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.goal-header-pig .goal-progress-fill {
  background: linear-gradient(90deg, #f472b6 0%, #ec4899 100%);
}

.goal-header-donkey .goal-progress-fill {
  background: linear-gradient(90deg, #60a5fa 0%, #3b82f6 100%);
}

.goal-progress-text {
  font-size: 20rpx;
  color: #9ca3af;
}

/* ==================== 目标列表 ==================== */
.goal-list {
  padding: 12rpx 16rpx 20rpx;
}

.goal-item {
  display: flex;
  align-items: flex-start;
  padding: 14rpx 12rpx;
  background: #fafafa;
  border-radius: 14rpx;
  margin-bottom: 10rpx;
  transition: all 0.2s ease;
}

.goal-item:last-child {
  margin-bottom: 0;
}

.goal-item:active {
  background: #f0f0f0;
}

.goal-check {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.goal-check-done {
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  border-color: transparent;
}

.goal-check-icon {
  font-size: 18rpx;
  color: #fff;
}

.goal-text {
  flex: 1;
  font-size: 24rpx;
  color: #1a1a2e;
  line-height: 1.5;
  word-break: break-all;
}

.goal-item-done .goal-text {
  color: #9ca3af;
  text-decoration: line-through;
}

/* ==================== 添加目标按钮 ==================== */
.add-goal-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 16rpx;
  margin: 0 16rpx 20rpx;
  background: #fafafa;
  border-radius: 14rpx;
  font-size: 24rpx;
  color: #9ca3af;
  border: 2rpx dashed #e5e7eb;
  transition: all 0.2s ease;
}

.add-goal-btn:active {
  background: #f0f0f0;
  border-color: #d1d5db;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 32rpx;
}

.empty-icon {
  font-size: 72rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a2e;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 32rpx;
}

.empty-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.35);
  transition: transform 0.15s ease;
}

.empty-btn:active {
  transform: scale(0.95);
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid #f3f4f6;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.7s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* ==================== 悬浮按钮 ==================== */
.fab-container {
  position: fixed;
  right: 32rpx;
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  z-index: 50;
}

