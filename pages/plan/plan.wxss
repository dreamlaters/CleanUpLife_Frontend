/* ==================== 弹窗表单（已在上方定义，此处移除重复） ==================== */

.modal-header {
  padding: 28rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.modal-body {
  padding: 32rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #fafafa;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a2e;
  box-sizing: border-box;
}

.form-input-placeholder {
  color: #9ca3af;
}

.form-radio-group {
  display: flex;
  gap: 16rpx;
}

.form-radio-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 18rpx;
  background: #fafafa;
  border-radius: 14rpx;
  font-size: 26rpx;
  color: #6b7280;
  transition: all 0.2s ease;
}

.form-radio-active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #667eea;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f5f5f5;
}

.modal-btn {
  flex: 1;
  padding: 22rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.2s ease;
}

.modal-btn:active {
  transform: scale(0.98);
}

.modal-btn-cancel {
  background: #f5f5f5;
  color: #6b7280;
}

.modal-btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.35);
}

/* ==================== 操作菜单 ==================== */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.action-sheet-mask.show {
  opacity: 1;
  visibility: visible;
}

.action-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: env(safe-area-inset-bottom);
}

.action-sheet.show {
  transform: translateY(0);
}

.action-sheet-header {
  padding: 24rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.action-sheet-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.action-sheet-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
  font-size: 30rpx;
  color: #1a1a2e;
  transition: background 0.2s ease;
}

.action-sheet-item:active {
  background: #fafafa;
}

.action-sheet-item-danger {
  color: #ef4444;
}

.action-sheet-cancel {
  border-top: 12rpx solid #f5f5f5;
  color: #6b7280;
}
